{
	"preset": "ts-jest/presets/default-esm",
	"testEnvironment": "node",
	"transform": {
		"\\.[jt]sx?$": "ts-jest"
	},
	"testMatch": ["**/?(*.)+(spec|test).ts?(x)"],
	"moduleFileExtensions": ["ts", "js"],
	"extensionsToTreatAsEsm": [".ts"],
	"globals": {
        "ts-jest": {
            "useESM": true
        }
    },
	"moduleNameMapper": {
		"^(\\.\\.?\\/.+)\\.js$": "$1"
	}
}
